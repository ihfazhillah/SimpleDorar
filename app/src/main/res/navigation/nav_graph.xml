<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/searchFragment"
    android:id="@+id/nav_graph">

    <action android:id="@+id/goToSearchResultDetail"
        app:destination="@id/searchResultDetail"
        >
        <argument android:name="query" app:argType="string"/>
        <argument android:name="resultItem" app:argType="com.ihfazh.simpledorar.search.ResultItem"/>
    </action>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ihfazh.simpledorar.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="@string/app_name"
        />

    <fragment
        android:id="@+id/searchResultDetail"
        android:name="com.ihfazh.simpledorar.search.SearchResultDetail"
        android:label="{query}"
        tools:layout="@layout/fragment_search_result_detail"
        >
        <argument android:name="query" app:argType="string"/>
        <argument android:name="resultItem" app:argType="com.ihfazh.simpledorar.search.ResultItem"/>
    </fragment>


</navigation>