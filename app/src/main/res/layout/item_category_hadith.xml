<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/refrenceTitle"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textAppearance="?textAppearanceSubtitle1"
            tools:text="@string/copy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginEnd="16dp"
            app:layout_constrainedWidth="true"
            android:textAlignment="textStart"
            android:layout_marginTop="8dp" />

        <TextView
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            android:textAlignment="textStart"
            android:textAppearance="?textAppearanceCaption"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/darker_gray"
            app:layout_constrainedWidth="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hadithExcerpt"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/refrenceTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/copy"
            app:layout_constraintStart_toStartOf="@id/refrenceTitle"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/refrenceTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>