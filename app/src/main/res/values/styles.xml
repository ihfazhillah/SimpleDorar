<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.AppBottomSheetDialogTheme</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">400dp</item>
<!--        <item name="colorPrimary">?attr/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">?attr/colorAccent</item>-->
    </style>

    <style name="AppTheme.ButtonOnlyIcon" parent="Widget.MaterialComponents.Button">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>